@model IEnumerable<PartyNeighbors.Data.Neighborhood>

@{
    ViewBag.Title = "List of Neighborhoods";
}

<h2>@ViewBag.Title</h2>

<button class="btn btn-default " role="button">@Html.ActionLink("Create New", "Create") &raquo;</button>
<br />
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State.StateName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZipCode)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State.StateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.ActionLink("Locations", "AddLocations", new { id = item.NeighborhoodId }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.NeighborhoodId }) |
                @Html.ActionLink("Details", "Details", new { id = item.NeighborhoodId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.NeighborhoodId })
                @*@Html.ActionLink("Residents", "Index", "Residents", new { id = item.NeighborhoodId }) |*@
            </td>
        </tr>
    }

</table>
