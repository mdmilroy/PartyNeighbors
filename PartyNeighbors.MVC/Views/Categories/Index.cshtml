@model IEnumerable<PartyNeighbors.Data.Category>

@{
    ViewBag.Title = "List of Categories";
}

<h2>@ViewBag.Title</h2>

@Html.ActionLink("Create New", "Create", null, new { style="background-color: #DE6500; color:white;", @class = "btn btn-default btn-large" })
<br />
<br />


<input class="form-control" id="myInput" type="text" placeholder="Search..">
<br>
<table class="table table-hover" id="myTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <span class="badge badge-pill badge-warning" id="edit">@Html.ActionLink("Edit", "Edit", new { id = item.CategoryId })</span>
                <span class="badge badge-pill badge-warning" id="details">@Html.ActionLink("Details", "Details", new { id = item.CategoryId })</span>
                <span class="badge badge-pill badge-warning" id="delete">@Html.ActionLink("Delete", "Delete", new { id = item.CategoryId })</span>
            </td>
        </tr>
    }

</table>

<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>