@model IEnumerable<PartyNeighbors.Data.Resident>

@{
    ViewBag.Title = "List of Residents";
}

<h2>@ViewBag.Title</h2>

<button class="btn btn-default " role="button">@Html.ActionLink("Create New", "Create") &raquo;</button>
<br />
<br />

<p>Type something in the input field to search the table:</p>
<input class="form-control" id="myInput" type="text" placeholder="Search..">
<br>
<table class="table table-hover" id="myTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Neighborhood.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Neighborhood.Name)
            </td>
            <td>
                <span class="badge badge-pill badge-warning" id="edit">@Html.ActionLink("Edit", "Edit", new { id = item.ResidentId })</span>
                <span class="badge badge-pill badge-warning" id="details">@Html.ActionLink("Details", "Details", new { id = item.ResidentId })</span>
                <span class="badge badge-pill badge-warning" id="delete">@Html.ActionLink("Delete", "Delete", new { id = item.ResidentId })</span>
            </td>
        </tr>
    }

</table>

<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>