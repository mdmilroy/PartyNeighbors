@model IEnumerable<PartyNeighbors.Data.Resident>

@{
    ViewBag.Title = "List of Residents";
}

<h2>@ViewBag.Title</h2>

<button class="btn btn-default " role="button">@Html.ActionLink("Create New", "Create") &raquo;</button>
<br />
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Neighborhood.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Neighborhood.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ResidentId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ResidentId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ResidentId })
            </td>
        </tr>
    }

</table>
