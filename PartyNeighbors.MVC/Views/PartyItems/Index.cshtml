@model IEnumerable<PartyNeighbors.Data.PartyItem>

@{
    ViewBag.Title = "List of Party Items";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Purchased)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Purchased)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PartyItemId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PartyItemId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PartyItemId })
            </td>
        </tr>
    }

</table>
